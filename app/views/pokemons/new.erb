<h2>Create a new Pokemon!</h2>

<br><br>

<% unless locals.empty? %>
    <%= message %>
<% end %>

<br><br>

<form method="POST" action="/pokemons">
    <label>Name: </label>
        <input type="text" id="name" name="name">
        <br><br>
    <label>Nickname: </label>
        <input type="text" id="nickname" name="nickname">
        <br><br>
    <label>Type: </label>
        <input type="text" id="type1" name="type1">
        <br><br>
    <label>Secondary Type (if applicable): </label>
        <input type="text" id="type2" name="type2">
        <br><br>
    <label>Best Buddy? </label>
        <input type="checkbox" id="best_buddy" name="best_buddy" value="true">
        <br><br><br>
    <input type="submit" value="Create Pokemon">
</form>
